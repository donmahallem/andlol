    <style name="League.AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/light_blue_700</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/light_blue_900</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/amber_500</item>

        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight & colorSwitchThumbNormal. -->

