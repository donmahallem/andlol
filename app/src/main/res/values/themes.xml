<resources>

    <style name="League.AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/League.ActionBar</item>
        <item name="android:windowBackground">@color/grey_100</item>
        <item name="android:popupMenuStyle">@style/League.PopupMenu</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="League.AppTheme.TranslucentActionBar" parent="League.AppTheme">
        <item name="android:actionBarStyle">@style/Widget.ActionBar</item>
    </style>

    <style name="League.AppTheme.TranslucentActionBar.ActionBar"/>

    <style name="League.AppTheme.TranslucentActionBar.ActionBar.Overlay">
        <item name="android:actionBarStyle">@style/Widget.ActionBar.Transparent</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>
</resources>
