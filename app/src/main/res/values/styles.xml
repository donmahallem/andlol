<resources>

    <!-- Base application theme. -->
    <style name="League.AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
    <item name="android:actionBarStyle">@style/League.ActionBar</item>
        <item name="android:windowBackground">@color/grey_100</item>
        <item name="android:popupMenuStyle">@style/League.PopupMenu</item>
    </style>

    <style name="League.ActionBar"
           parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/light_blue_900</item>
    </style>

    <style name="League.PopupMenu" parent="android:Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@color/grey_200</item>
        <item name="android:textColor">@color/grey_800</item>
    </style>


    <style name="Text.DescriptionTitle" parent="android:style/TextAppearance">
        <item name="android:textColor">@color/blue_grey_800</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25dp</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="Text.Description" parent="android:style/TextAppearance">
        <item name="android:textColor">@color/grey_900</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:typeface">sans</item>
    </style>

</resources>
