<resources>


    <style name="Widget.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_transluecent_background</item>
    </style>

    <style name="Widget.ActionBar.Transparent">
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="League.ActionBar"
           parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/light_blue_900</item>
    </style>
    <!--  -->

    <style name="PopupMenu.Example" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/ab_popupmenu_background</item>
    </style>

    <style name="DropDownListView.Example" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@color/light_blue_200</item>
    </style>


    <style name="DropDownNav.Example" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@color/amber_200</item>
        <item name="android:textColor">@color/grey_1000b</item>
        <item name="android:popupBackground">@color/grey_400</item>
        <item name="android:dropDownSelector">@color/brown_900</item>
    </style>


    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Example.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Example</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Example</item>
    </style>
    <!--  -->
    <style name="League.PopupMenu" parent="@android:style/Widget.Holo.ListPopupWindow">
    <item name="android:popupBackground">@color/grey_200</item>
        <item name="android:textColor">@color/grey_800</item>
    </style>


    <style name="Text.Description.Title" parent="android:style/TextAppearance">
        <item name="android:textColor">@color/grey_1000b</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25dp</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="Text.Description.Title2" parent="android:style/TextAppearance">
        <item name="android:textColor">@color/blue_grey_800</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="Text.Description.Subtitle" parent="android:style/TextAppearance">
        <item name="android:textColor">@color/blue_grey_900</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">15dp</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="Text.Description" parent="android:style/TextAppearance">
        <item name="android:textColor">@color/grey_900</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="Text.Description.Small" parent="style/Text.Description">
        <item name="android:textColor">@color/grey_600</item>
        <item name="android:textSize">10dp</item>
    </style>

    <style name="League.Button.Borderless" parent="android:Widget.Button">
        <item name="android:textColor">@color/grey_1000w</item>
        <item name="android:background">@drawable/background_borderless_buttonbar</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="League.Divider">
        <item name="android:background">@color/grey_400</item>
        <item name="android:layout_margin">@dimen/divider_margin</item>
    </style>

    <style name="League"></style>

</resources>
