<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_margin_vertical_default"
    android:layout_marginLeft="@dimen/card_margin_horizontal_default"
    android:layout_marginRight="@dimen/card_margin_horizontal_default"
    android:layout_marginTop="@dimen/card_margin_vertical_default"
    android:foreground="?android:selectableItemBackground"
    card_view:cardBackgroundColor="@color/grey_600"
    card_view:cardCornerRadius="@dimen/card_corner_radius_default"
    card_view:cardElevation="@dimen/card_elevation_default">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_content_padding"
        android:orientation="vertical">


        <TextView
            android:id="@id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@android:color/white"
            />

        <TextView
            android:id="@id/txtActiveMastery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/active"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@android:color/white"
            />
    </LinearLayout>
</android.support.v7.widget.CardView>