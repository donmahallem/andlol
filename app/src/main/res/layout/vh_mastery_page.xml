<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_margin_vertical_default"
    android:layout_marginLeft="@dimen/card_margin_horizontal_default"
    android:layout_marginRight="@dimen/card_margin_horizontal_default"
    android:layout_marginTop="@dimen/card_margin_vertical_default"
    android:foreground="?android:selectableItemBackground"
    card_view:cardBackgroundColor="?colorPrimary"
    card_view:cardCornerRadius="@dimen/card_corner_radius_default"
    card_view:cardElevation="@dimen/card_elevation_default">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <eu.mok.mokeulol.view.SummonerIconImageView
                android:id="@id/ivSummonerIcon"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:background="@color/grey_300"
                android:scaleType="centerCrop"
                />

            <eu.mok.mokeulol.view.ChampionIconImageView
                android:id="@id/ivChampionIcon"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:background="@color/grey_300"
                android:scaleType="centerCrop"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_content_padding"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="true"
                android:gravity="center_vertical"
                android:text="@string/app_name"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@android:color/white"
                />

            <TextView
                android:id="@id/txtChampionName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/app_name"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@android:color/white"
                />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>