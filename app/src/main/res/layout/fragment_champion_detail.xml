<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hlist="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@id/ivChampionIcon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Large"/>

                <TextView
                    android:id="@id/subTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Large"/>
            </LinearLayout>
        </LinearLayout>

        <it.sephiroth.android.library.widget.HListView
            android:id="@id/hListView"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            hlist:hlv_dividerWidth="5dp"/>

        <TextView
            android:id="@id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Large"/>

        <TextView
            android:id="@id/txtDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <eu.mok.mokeulol.view.ChampionSpellView
            android:id="@id/ivSpell1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/very_light_grey"/>

        <eu.mok.mokeulol.view.ChampionSpellView
            android:id="@id/ivSpell2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/very_light_grey"/>

        <eu.mok.mokeulol.view.ChampionSpellView
            android:id="@id/ivSpell3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/very_light_grey"/>

        <eu.mok.mokeulol.view.ChampionSpellView
            android:id="@id/ivSpell4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/very_light_grey"/>
    </LinearLayout>
</ScrollView>